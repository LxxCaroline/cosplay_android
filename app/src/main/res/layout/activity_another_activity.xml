<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_transparent"
    android:orientation="vertical"
    android:id="@+id/rl_contain">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingBottom="80dp"
        android:layout_marginBottom="@dimen/margin_80px"
        android:gravity="center">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_choose_course_type"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_80px"
            />
        <include
            layout="@layout/item_course_type_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </include>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_btn_big_120px"
        android:layout_marginBottom="@dimen/margin_60px"
        android:layout_marginLeft="@dimen/margin_40px"
        android:layout_marginRight="@dimen/margin_40px"
        android:layout_marginTop="@dimen/margin_60px"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="@dimen/icon_big_64px"
            android:layout_height="@dimen/icon_big_64px"
            android:padding="@dimen/margin_10px"
            android:src="@mipmap/ic_recruite_close" />
    </LinearLayout>

</RelativeLayout>
