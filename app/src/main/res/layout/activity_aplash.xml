<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_splath">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/splash_return_height"
        android:orientation="vertical">
    </LinearLayout>
    <include layout="@layout/view_aplash_icon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/splash_item_height"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="@dimen/splash_item_width"
            android:text="注册"
            android:gravity="center"
            android:layout_height="match_parent"
            style="@style/text_white_max"
            android:background="@drawable/btn_splash_red"
            android:visibility="gone"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/splash_item_width"
            android:text="登录"
            android:gravity="center"
            style="@style/text_pink_max"
            android:layout_height="match_parent"
            android:background="@drawable/btn_splash_white"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"></LinearLayout>
</LinearLayout>
