<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">
    <include layout="@layout/component_title_normal_righttext"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40px" />
        <TextView style="@style/layout_line_gray"/>
        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/bg_white"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingTop="@dimen/margin_40px"
            android:paddingBottom="@dimen/margin_40px"
            style="@style/text_dark_mid"
            android:textColorHint="@color/text_gray"/>
        <TextView style="@style/layout_line_gray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_inputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40px" />
        <TextView style="@style/layout_line_gray"/>
        <EditText
            android:id="@+id/et_inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/bg_white"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingTop="@dimen/margin_40px"
            android:paddingBottom="@dimen/margin_40px"
            style="@style/text_dark_mid"
            android:password="true"
            android:hint="请输入新密码"
            android:textColorHint="@color/text_gray"/>
        <TextView style="@style/layout_line_gray"/>
        <EditText
            android:id="@+id/et_inputPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/bg_white"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingTop="@dimen/margin_40px"
            android:paddingBottom="@dimen/margin_40px"
            style="@style/text_dark_mid"
            android:password="true"
            android:hint="再次输入新密码"
            android:textColorHint="@color/text_gray"/>
        <TextView style="@style/layout_line_gray"/>
    </LinearLayout>
</LinearLayout>