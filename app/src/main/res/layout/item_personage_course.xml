<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <LinearLayout
        android:id="@+id/ll_personage_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_30px"
        android:layout_marginLeft="@dimen/margin_40px"
        android:layout_marginRight="@dimen/margin_40px"
        android:background="@drawable/bg_course_item"
        android:orientation="vertical">
        <!-- 图片-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_cover_640px_960px">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_20px"
                android:layout_marginRight="@dimen/margin_20px"
                android:layout_marginTop="@dimen/margin_20px"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/margin_50px"
                android:layout_marginRight="@dimen/margin_50px"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/course_item_focus_width"
                    android:layout_height="@dimen/course_item_focus_width"
                    android:src="@mipmap/ic_praise" />

                <TextView
                    android:id="@+id/tv_praiseNum"
                    style="@style/text_pink_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20px"
                    android:text="" />

            </LinearLayout>


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20px"
            android:layout_marginRight="@dimen/margin_20px"
            android:paddingTop="@dimen/margin_40px"
            android:paddingBottom="@dimen/margin_40px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_pink_max"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_20px"
                android:gravity="left"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <TextView
                android:id="@+id/tv_time"
                style="@style/text_gray_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

