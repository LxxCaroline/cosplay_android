<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/width_popup_six_type"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/width_popup_six_type"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/width_popup_six_type"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="@dimen/margin_50px"
            android:layout_height="@dimen/margin_50px"
            android:scaleType="fitEnd"
            android:src="@mipmap/special_dark_trans"/>
        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_popup_six_type">
        <RadioButton
            android:id="@+id/rbtn1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:button="@null"
            android:text="全 部"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/paddingLeft_popup_six_type"
            style="@style/text_gray_max"
            android:textColor="@color/radio_six_type"/>
            <TextView style="@style/layout_line_gray"/>
            <RadioButton
                android:id="@+id/rbtn2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_140px"
                android:button="@android:color/transparent"
                android:text="精 选"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/paddingLeft_popup_six_type"
                style="@style/text_gray_max"
                android:textColor="@color/radio_six_type"/>
            <TextView style="@style/layout_line_gray"/>
            <TextView style="@style/layout_line_gray"/>
            <RadioButton
                android:id="@+id/rbtn3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_140px"
                android:button="@null"
                android:text="新 人"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/paddingLeft_popup_six_type"
                style="@style/text_gray_max"
                android:textColor="@color/radio_six_type"/>
            <TextView style="@style/layout_line_gray"/>
            <TextView style="@style/layout_line_gray"/>
            <RadioButton
                android:id="@+id/rbtn4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_140px"
                android:button="@null"
                android:text="关 注"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/paddingLeft_popup_six_type"
                style="@style/text_gray_max"
                android:textColor="@color/radio_six_type"/>
            <TextView style="@style/layout_line_gray"/>
            <TextView style="@style/layout_line_gray"/>

        </RadioGroup>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>