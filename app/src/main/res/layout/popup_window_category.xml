<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView style="@style/layout_line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_white">

        <Button
            android:id="@+id/btn_all_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:layout_weight="1"
            android:text="全部分类"
            android:background="@drawable/ll_white"
            style="@style/text_gray_mid"
            android:textColor="@color/radio_sort_text"/>

        <TextView style="@style/layout_line_gray_v"/>

        <Button
            android:id="@+id/btn_same_people_show"
            android:text="同人展"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:layout_weight="1"
            android:background="@drawable/ll_white"
            style="@style/text_gray_mid"
            android:textColor="@color/radio_sort_text"/>

        <TextView style="@style/layout_line_gray_v"/>

        <Button
            android:id="@+id/btn_movie_festival"
            android:text="动漫节"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:layout_weight="1"
            android:background="@drawable/ll_white"
            style="@style/text_gray_mid"
            android:textColor="@color/radio_sort_text"/>

    </LinearLayout>

    <TextView style="@style/layout_line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_official_activities"
            android:text="官方活动"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:layout_weight="1"
            android:background="@drawable/ll_white"
            style="@style/text_gray_mid"
            android:textColor="@color/radio_sort_text"/>
        <TextView style="@style/layout_line_gray_v"/>
        <Button
            android:id="@+id/btn_category_live"
            android:text="LIVE"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:layout_weight="1"
            android:background="@drawable/ll_white"
            style="@style/text_gray_mid"
            android:textColor="@color/radio_sort_text"/>
        <TextView style="@style/layout_line_gray_v"/>
        <Button
            android:id="@+id/btn_category_stage"
            android:text="舞台祭"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:layout_weight="1"
            android:background="@drawable/ll_white"
            style="@style/text_gray_mid"
            android:textColor="@color/radio_sort_text"/>
    </LinearLayout>

    <TextView style="@style/layout_line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_category_match"
            android:text="赛事"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:layout_weight="1"
            android:background="@drawable/ll_white"
            style="@style/text_gray_mid"
            android:textColor="@color/radio_sort_text"/>
        <TextView style="@style/layout_line_gray_v"/>
        <Button
            android:id="@+id/btn_theme_only"
            android:text="主题ONLY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:layout_weight="1"
            android:background="@drawable/ll_white"
            style="@style/text_gray_mid"
            android:textColor="@color/radio_sort_text"/>
        <TextView style="@style/layout_line_gray_v"/>
        <Button
            android:id="@+id/btn_category_party"
            android:text="派对"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:layout_weight="1"
            android:background="@drawable/ll_white"
            style="@style/text_gray_mid"
            android:textColor="@color/radio_sort_text"/>
    </LinearLayout>

    <TextView style="@style/layout_line_gray"/>

</LinearLayout>
