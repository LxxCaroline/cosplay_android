<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/bg_gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_40px"
            android:background="@drawable/comment_shape"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_30px"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginTop="@dimen/margin_30px">

            <EditText
                android:id="@+id/workDetailsCommentEdTx"
                style="@style/text_dark_mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:hint="@string/comment_hint"
                android:textColorHint="@color/text_gray"
                android:paddingBottom="@dimen/margin_20px"
                android:paddingLeft="@dimen/margin_50px"
                android:paddingTop="@dimen/margin_20px" />
        </LinearLayout>
        <TextView style="@style/layout_line_gray_v"/>

        <LinearLayout
            android:id="@+id/favorBtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_favor"
                android:layout_width="@dimen/icon_big_64px"
                android:layout_height="@dimen/icon_big_64px"
                android:src="@mipmap/ic_praise_block"/>
            <TextView
                android:id="@+id/tv_favor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@null"
                android:text="@string/favour"
                style="@style/text_pink_mid" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
