<resources>
    <style name="layout_line_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/width_line</item>
        <item name="android:background">@color/bg_gray_dark</item>
    </style>

    <style name="layout_line_gray_v">
    <item name="android:layout_width">@dimen/width_line</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/bg_gray_dark</item>
</style>

    <style name="layout_0dp_width">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="layout_0dp_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
